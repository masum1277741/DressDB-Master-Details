
@{
    ViewBag.Title = "Index";
}

<h2 class="display-4 form-text">Dress List</h2>
<div class="card mb-2"style="background-image: url('../../images/card2.jpg'); ">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-end">
                    <a href="@Url.Action("Create","Dresses")" class="btn btn-outline-primary btn-sm"><i class="fa fa-plus-circle"></i> Add New Dress</a>
                </div>
                <div id="table-div">
                    @Html.Action("DressDetails")
                </div>
            </div>
        </div>
        @section styles{

            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
        }
        @section scripts{
            <script src="~/Scripts/jquery-3.7.1.js"></script>
            <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

            <script>
                $(document).on("click", "button.show", function () {
                    var showBtn = $(this);
                    var hideBtn = showBtn.next();
                    var trSh = showBtn.closest("tr");
                    var trSt = trSh.next();
                    showBtn.hide();
                    hideBtn.show();
                    trSt.show();
                });
                $(document).on("click", "button.hide", function () {
                    var hideBtn = $(this);
                    var showBtn = hideBtn.prev();
                    var trSh = showBtn.closest("tr");
                    var trSt = trSh.next();
                    showBtn.show();
                    hideBtn.hide();
                    trSt.hide();
                });
            </script>
        </div>
 </div>
    }
